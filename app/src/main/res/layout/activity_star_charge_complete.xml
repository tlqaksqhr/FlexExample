<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".charge.StarChargeCompleteActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/star_charge_complete_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageButton
                android:id="@+id/star_charge_complete_toolbar_prev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>

        <TextView
                android:id="@+id/star_charge_complete_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#919191"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                tools:text="스타충전"
                android:layout_gravity="center"/>

        <ImageButton
                android:id="@+id/star_charge_complete_toolbar_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/star_charge_complete_current_star_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_toolbar"
            android:textSize="17.5sp"
            android:textColor="#383635"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="-5sp"
            android:text="보유스타"/>

    <TextView
            android:id="@+id/star_charge_complete_current_star_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22.5sp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="-10sp"
            android:gravity="center_horizontal"
            android:text="3,000 스타"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_current_star_label"/>
    <View
        android:id="@+id/star_charge_complete_divider1"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="#afafaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_current_star_count"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/star_charge_complete_terms_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10.5sp"
        android:textColor="#919191"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="4.5sp"
        tools:text="스타 환불은 구입후 30일 이내 고객센터를 통해 환불하실 수 있습니다. \n자세한 사항은 스타 환불에 관한 약관을 참조하십시오. \n이용해주셔서 감사합니다."
        app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_divider1"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="41dp" android:layout_marginEnd="41dp" android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/star_charge_complete_divider2"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="#afafaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_terms_text"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/star_charge_complete_btn"
            android:backgroundTint="#fc4d71"
            android:background="#fc4d71"
            android:textSize="17.5sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="8.3sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="충전완료"
            android:gravity="center"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_charge_complete_divider2"
            android:layout_marginStart="41dp"
            android:layout_marginEnd="41dp" android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>