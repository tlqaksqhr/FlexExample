<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:paddingRight="4dp"
        android:paddingBottom="6dp">

    <TextView
            android:id="@+id/star_count_btn_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="-7.5sp"
            android:text="100"
            android:textColor="#acacac"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/star_btn_divider"
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_count_star_title" />

    <TextView
            android:id="@+id/star_count_star_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="-7.5sp"
            android:text="스타"
            android:textColor="#acacac"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_count_btn_count" />

    <TextView
            android:id="@+id/star_count_btn_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="0.8sp"
            android:text="10000원\n"
            android:textColor="#acacac"
            android:textSize="10.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_btn_divider" />

    <TextView
            android:id="@+id/star_count_btn_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="0.8sp"
            android:text="보너스\n10000원"
            android:textColor="#acacac"
            android:textSize="10.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_count_btn_price" />

</androidx.constraintlayout.widget.ConstraintLayout>