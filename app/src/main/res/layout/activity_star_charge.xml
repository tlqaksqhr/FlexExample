<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".charge.StarChargeActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/star_charge_payment_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                        android:id="@+id/star_charge_payment_toolbar_prev_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:src="@drawable/ic_left_arrow"
                        android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/star_charge_payment_toolbar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스타충전"
                        android:layout_gravity="center"/>

                <ImageButton
                        android:id="@+id/star_charge_payment_toolbar_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_exit_icon"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"/>
            </androidx.appcompat.widget.Toolbar>


            <com.example.customradiobutton.radiobutton.CustomRadioGroup
                    android:id="@+id/star_charge_payment_container_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_toolbar">

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="50"
                        app:star_button_price="5,000원\n"/>

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="100"
                        app:star_button_price="10,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="300"
                        app:star_button_price="30,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="500"
                        app:star_button_price="50,000원\n" />


                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="1,000"
                        app:star_button_price="100,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/star_btn_1"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="3,000"
                        app:star_button_price="300,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_6"
                        app:layout_constraintTop_toBottomOf="@+id/star_btn_2"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="5,000"
                        app:star_button_price="500,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_7"
                        app:layout_constraintTop_toBottomOf="@+id/star_btn_3"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="10,000"
                        app:star_button_price="1,000,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_8"
                        app:layout_constraintTop_toBottomOf="@+id/star_btn_4"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="50,000"
                        app:star_button_price="5,000,000원\n" />

                <com.example.customradiobutton.radiobutton.StarCustomRadioButton
                        android:id="@+id/star_btn_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintStart_toEndOf="@+id/star_btn_9"
                        app:layout_constraintTop_toBottomOf="@+id/star_btn_5"
                        app:star_button_bonus="보너스\n10,000"
                        app:star_button_count="100,000"
                        app:star_button_price="10,000,000원\n" />

            </com.example.customradiobutton.radiobutton.CustomRadioGroup>

            <TextView
                    android:id="@+id/star_charge_payment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:lineSpacingExtra="7.3sp"
                    android:text="결제수단"
                    android:textColor="#2a3542"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_container_custom" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/star_charge_payment_button_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/transparent"
                    app:checkedButton="@+id/star_charge_payment_toss_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_label"
                    app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/star_charge_payment_credit_card_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신용카드" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/star_charge_payment_toss_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toss" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/star_charge_payment_kakao_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kakaopay" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/star_charge_payment_phone_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴대폰" />
            </com.google.android.material.button.MaterialButtonToggleGroup>


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/star_charge_payment_money_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_button_group"
                    app:strokeColor="#707070"
                    app:strokeWidth="0.2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/star_charge_payment_money_container_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/star_charge_payment_money_before_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="6sp"
                            android:text="충전 전"
                            android:textColor="#5e5e5e"
                            android:textSize="11.5sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/star_charge_payment_money_before_star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="6sp"
                            android:text="30,000 스타"
                            android:textColor="#5e5e5e"
                            android:textSize="16.5sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_money_before_label" />


                    <TextView
                            android:id="@+id/star_charge_payment_money_after_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="6sp"
                            android:text="충전 후"
                            android:textColor="#5e5e5e"
                            android:textSize="11.5sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.65"
                            app:layout_constraintStart_toEndOf="@+id/star_charge_payment_money_before_label"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/star_charge_payment_money_after_star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="6sp"
                            android:text="31,000 스타"
                            android:textColor="#fc4d71"
                            android:textSize="16.5sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.67"
                            app:layout_constraintStart_toEndOf="@+id/star_charge_payment_money_before_star_count"
                            app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_money_before_label" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/star_charge_payment_charge_terms_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="1"
                    android:background="#ffffff"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_money_container"
                    app:strokeColor="#707070"
                    app:strokeWidth="0.2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/star_charge_payment_charge_terms_container_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/star_charge_payment_charge_terms_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="3sp"
                            android:text="스타 충전에 관한 약관을 읽었으며\n상기 약관에 동의합니다."
                            android:textColor="#5e5e5e"
                            android:textSize="12.5sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/star_charge_payment_charge_terms_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:backgroundTint="#fafafa"
                            android:text="약관 동의"
                            android:textColor="#919191"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/star_charge_payment_charge_terms_check"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="#707070"
                            app:strokeWidth="0.2dp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/star_charge_payment_charge_terms_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="19dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/star_charge_payment_refund_terms_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="16dp"
                    android:background="#ffffff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_charge_terms_container"
                    app:strokeColor="#707070"
                    app:strokeWidth="0.2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/star_charge_payment_refund_terms_container_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/star_charge_payment_refund_terms_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="3sp"
                            android:text="스타 환불에 관한 약관을 읽었으며\n상기 약관에 동의합니다."
                            android:textColor="#5e5e5e"
                            android:textSize="12.5sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/star_charge_payment_refund_terms_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:backgroundTint="#fafafa"
                            android:text="약관 동의"
                            android:textColor="#919191"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/star_charge_payment_charge_refund_terms_check"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="#707070"
                            app:strokeWidth="0.2dp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/star_charge_payment_charge_refund_terms_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="19dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/star_charge_payment_charge_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/star_charge_payment_refund_terms_container"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    app:cornerRadius="24dp"
                    android:backgroundTint="#fc4d71"
                    android:textSize="17.5sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="0sp"
                    android:text="충전하기"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
